{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
        ]
      },
      {
        "source": "**/*.@(css|js|mjs|woff2|ttf|svg)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.@(png|jpg|jpeg|gif|webp|avif)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/feed.@(xml|rss)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=600" }
        ]
      },
      {
        "source": "**/index.json",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=3600" }
        ]
      }
    ],
    "redirects": [ {
      "source": "/blog/lambda-architecture-a-data-engineering-approach",
      "destination": "/blog/lambda-architecture",
      "type": 301
    },
    {
      "source": "/blog/repository-and-unit-of-work-pattern-asp-net-core-3-1",
      "destination": "/blog/repository-and-unit-of-work-pattern-asp-net-core",
      "type": 301
    },
    {
      "source": "/blog/add-security-requirements-oas3-swagger-netcore3-1-using-swashbuckle",
      "destination": "/blog/securing-openapi-endpoint-dotnet",
      "type": 301
    },
    {
      "source": "/blog/kubernetes/kubernetes-gatekeeper-an-introduction",
      "destination": "/blog/kubernetes/opa-gatekeeper-an-introduction",
      "type": 301
    },
    {
      "source": "/blog/kubernetes/introduction-to-open-policy-agent-opa",
      "destination": "/blog/kubernetes/open-policy-agent-opa",
      "type": 301
    },
    {
      "source": "/blog/kubernetes/kubernetes-cluster-api-capi-an-introduction",
      "destination": "/blog/kubernetes/cluster-api-capi",
      "type": 301
    },
    {
      "source": "/blog/rest/what-is-rest",
      "destination": "/blog/rest/REST-API-what-is-rest",
      "type": 301
    },
    {
      "source": "/blog/what-is-https",
      "destination": "/blog/https",
      "type": 301
    }]
  }
}
